<%- include ("includes/header.ejs") %> -%>
<div class="container">
    <div class="col-12">
        <div class="container-fluid">
            <div class="row my-5">
                <div class="col-12 col-lg-6">
                    <h1>register Form</h1>
                </div>
                <div class="col-12 col-lg-6 ">
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fugiat perspiciatis, odio
                        distinctio ullam necessitatibus ad commodi eum</p>
                </div>
            </div>
            <form action="/user/register" method="POST">
                <div class="row my-2">
                    <div class="col-12 col-lg-6 my-2">
                        <input type="text" name="lname" id="lname" class="form-control" placeholder="lastname">
                    </div>
                    <div class="col-12 col-lg-6 my-2">
                        <input type="text" name="fname" id="fname" class="form-control" placeholder="frstname">
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-12">
                        <input type="text" name="nikname" id="nikname" class="form-control" placeholder="Nick">
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-12">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-12 col-lg-6 my-2">
                        <input type="password" name="pass" id="pass" class="form-control" placeholder="Password">
                    </div>
                    <div class="col-12 col-lg-6 my-2">
                        <input type="password" name="rpass" id="rpass" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-12 col-lg-6"></div>
                    <div class="col-12 col-lg-6">
                        <input type="submit" id="submit" class="form-control btn btn-success" value="send">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
